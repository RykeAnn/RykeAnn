MDScreen:
    name: "SplashScreen"
    on_enter: self.ids.progress.start()
    MDBoxLayout:
        MDFloatLayout:
            Image:
                source:'assets/anim.gif'
                allow_stretch: True
                anim_delay: 0
                # anim_loop: 1
                anim_reset: True


            BoxLayout:

                pos_hint:{'center_y':.1, 'center_x':.5}
                padding: "10dp"
                size_hint_x: .5


                MDProgressBar:
                    id: progress
                    orientation: "horizontal"
                    type: "indeterminate"
                    running_duration: 1
                    catching_duration: 1






































